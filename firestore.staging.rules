rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Staging environment rules - More permissive for testing
    // Allows all authenticated users to read/write
    // For staging, you may want to be more permissive than production
    
    match /{document=**} {
      // Allow all authenticated users (staging/testing)
      allow read, write: if request.auth != null;
    }
    
    // Alternative: Completely open for staging (use with caution)
    // match /{document=**} {
    //   allow read, write: if true;
    // }
  }
}

